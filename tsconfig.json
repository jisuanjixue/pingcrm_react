{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "global.d.ts"],
    "paths": {
      "@/*": ["app/javascript/*"],
      "@components": ["app/javascript/components/*"],
      "@hooks": ["app/javascript/hooks/*"],
      "@data-types": ["app/javascript/data-types/*"]
    }
  },
  "exclude": ["node_modules"],
  "compileOnSave": false
}
